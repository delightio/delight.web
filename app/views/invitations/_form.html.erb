<%= simple_form_for(@group_invitation, :url => invitations_path, :html => { :class => "form-horizontal"}) do |f| %>

  <%= f.input :emails, :as => :string, :placeholder => 'Comma seperated list of emails' %>
  <%= f.input :message, :as => :text, :input_html => { :rows => 8 }, :placeholder => "I would like to invite you to the delight.io to view the app #{@app.name}. You will be able to access all recordings from this app." %>
  <%= f.input :app_id, :as => :hidden %>
  <%= f.button :submit, :class => 'btn btn-large btn-primary', :value => 'Send' %>

<% end %>
