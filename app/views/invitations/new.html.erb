<div class="container" style="text-align:center">
  <%= render :partial => "shared/error_message" %>

<div class="row">
  <div class="span12" style="margin-top:10px">
    <h2>Invite your team to <%= @app.name %></h2>
  </div>
  <p style="margin-top:10px">
    Your team members will have access to all the recordings
    from this app but they will not be able to invite others or
    schedule more sessions.
  </p>
  <% if @app.emails.count > 1 %>
  <br>
  <p>
    Currently shared with: <%= @app.emails.join(', ') %>
  </p>
  <% end %>
</div>
<hr />
<%= render 'form' %>

</div>
