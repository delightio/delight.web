<%= form_for(@account, :html => { :class => "form-horizontal" }) do |f| %> 
  <% if @account.errors.any? %>
		<div class="alert alert-error fade in" data-alert="alert">
		  <a class="close" data-dismiss="alert" href="#">&times;</a>
			<%= pluralize(@account.errors.count, "error") %> prohibited this account from being added
		</div>
		<% @account.errors.full_messages.each do |msg| %>
		<div class="alert alert-error fade in" data-alert="alert">
		  <a class="close" data-dismiss="alert" href="#">&times;</a>
		  <%= msg %>
		</div>
		<% end %>
  <% end %>

  <fieldset> 
    <div class="control-group">
      <label class="control-label" for="name">Account name</label>
      <div class="controls">
        <%= f.text_field(:name, :class => "span6") %>
      </div>
    </div>

		<div class="form-actions">
			<%= f.submit "Save", :class => "btn btn-primary" %>
		</div>
  </fieldset> 
<% end %> 
