<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to raw(I18n.t("topnav.brand")), user_signed_in? ? apps_path : root_path, :class => 'brand' %>
      <div class="nav-collapse">
        <ul class="nav">
          <li class=<%= 'active' if controller.controller_name == 'home' and controller.action_name == 'features' %>><a href="/features">features</a></li>
          <li class="dropdown">
            <%= link_to "documentation", "javascript:void(0)", :class => "dropdown-toggle", :'data-toggle' => "dropdown" %>
            <ul class="dropdown-menu btn-large">
              <li><a href="/docs">QuickStart Guide</a></li>
              <li><a href="/docs/opengles">OpenGL ES Guide</a></li>
              <li><a href='http://www.delight.io/api/Classes/Delight.html' target='_blank'>iOS API <i class='icon-share'></i></a></li>
              <li class="divider"></li>
              <li><a href="/docs/unity">Integrating with Unity</a></li>
              <li><a href="/docs/phonegap">Integrating with PhoneGap</a></li>
              <li><a href="/docs/cocos2d">Integrating with cocos2d</a></li>
            </ul>
          </li>
          <li class=<%= 'active' if controller.controller_name == 'home' and controller.action_name == 'pricing' %>><a href="/pricing">pricing</a></li>
          <li class=<%= 'active' if controller.controller_name == 'home' and controller.action_name == 'faq' %>><a href="/faq">faq</a></li>
          <li class=<%= 'active' if controller.controller_name == 'home' and controller.action_name == 'blog' %>><a href="/blog">blog</a></li>
        </ul>
        <ul class="nav pull-right">
          <li class="divider-vertical"></li>
          <% if user_signed_in? %>
          <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><img src=<%= current_user.image_url ? current_user.image_url : '/images/profile-pic.jpg' %> width="20" height="20" alt="" class="user-pic"><%= current_user.nickname %> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "Logout", "/sign_out", :method => :delete %></li>
            </ul>
          </li>
          <% else %>
          <li class="dropdown">
            <%= link_to "login", "javascript:void(0)", :class => "dropdown-toggle", :'data-toggle' => "dropdown" %>
            <ul class="dropdown-menu btn-large">
              <li><%= link_to raw('<i class="icon-github-sign icon-large"></i> Log in with Github'), omniauth_authorize_path('user', 'github') %></li>
              <li class="divider"></li>
              <li><%= link_to raw('<i class="icon-twitter-sign icon-large"></i> Log in with Twitter'), omniauth_authorize_path('user', 'twitter') %></li>
            </ul>
          </li>
          <% end %>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>
