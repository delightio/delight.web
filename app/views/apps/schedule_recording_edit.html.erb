<div class="container" style="text-align:center">
  <%= render :partial => "shared/error_message" %>
  <h1>Schedule recording</h1>
  <hr/>
  <% if @app %>
    <div class="row">
      <div class="span12">
      <%= form_for(@app, :url => app_schedule_recording_update_path(:app_id => @app.id), :html => { :class => "form-horizontal" }) do |f| %>
      <fieldset>
        <!--
        <div class="row">
          <div class="span12">
            Available Credits: <%= @app.account.remaining_credits %>
          </div>
        </div>
        -->
        <div class="control-group">
          <%= label_tag 'schedule recording', nil, :class => "control-label" %>
          <div class="controls">
            <%= text_field_tag 'schedule_recording', @schedule_recording, :class => "span3" %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.submit "Save", :class => "btn btn-primary" %>
        </div>
      </fieldset>
    <% end %>
    </div>
  </div>
<% end %>
</div>
