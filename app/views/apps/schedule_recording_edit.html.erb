<div class="container" style="text-align:center">
  <%= render :partial => "shared/error_message" %>
  <h1 style="margin-top: 15px">Schedule recording</h1>
  <hr/>
  <% if @app %>
    <div class="row">
      <div class="span12">
      <%= form_for(@app, :url => app_schedule_recording_update_path(:app_id => @app.id), :html => { :class => "form-horizontal" }) do |f| %>
      <fieldset>
        <p>
        We are giving out free recordings during beta stage.
        asfdsafsadl;fjlksd
        al;djfsadjf blah blah blah
        </p>
        <!--
        <div class="row">
          <div class="span12">
            Available Credits: <%= @app.account.remaining_credits %>
          </div>
        </div>
        -->
        <div class="control-group">
          <div class="controls">
            Schedule recording: <%= text_field_tag 'schedule_recording', @schedule_recording, :class => "input-small" %>
          </div>
        </div>

        <div class="row">
          <div class="span12">
          <%= f.submit "Schedule", :class => "btn btn-primary btn-large", :style => "text-align:center" %>
          </div>
        </div>
      </fieldset>
    <% end %>
    </div>
  </div>
<% end %>
</div>
