<%# App Page. Nav here. %>
  <header class="row">
    <div class="span5">
      <h2>
        <a href=<%= apps_path %>><%= @app.name %></a>
      </h2>
    </div>

    <div class="span7 pull-right app-nav">

      <span><%= link_to(raw("<span id='num-scheduled-recording'>" + @app.scheduled_recordings.to_s + "</span> Sessions Scheduled"), app_schedule_recording_edit_path(:app_id => @app.id), :id => 'app-schedule-recording') %></span>
      <% if current_user == @app.account.administrator %>
        <span class="divider">/</span>
        <%= link_to 'Setup', '#', :id => 'app-setup-btn' %>
        <% end %>

    </div>

  </header><!--/row-->

  <hr />

  <div class="row">
    <!-- Sidebar -->
    <div class="span3 sidebar">
      <div  class="sidebar-inner">
        <div class="dashboard">
          <%= link_to raw('<i class="icon-pause"></i> Pause Recording'), app_update_recording_path(:app_id => @app.id, :state => 'pause', :format => :json), :remote => true, :method => :put, :class => "btn btn-danger btn-large", :id => "app-show-pause-recording-btn", :style => @app.recording_paused? ? 'display:none' : '' %>
          <%= link_to raw('<i class="icon-play"></i> Start Recording'), app_update_recording_path(:app_id => @app.id, :state => 'resume', :format => :json), :remote => true, :method => :put, :class => "btn btn-success btn-large", :id => "app-show-resume-recording-btn", :style => @app.recording_paused? ? '' : 'display:none' %>

          <div class="dropdown clearfix nav-dropdown">
            <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">

              <li class="nav-header">Session Recording</li>
              <li>

                <div id="session-recorder">
                  <div id="session-recorder-info"><span class="action">Start</span></div>
                  <div class="round-btn-wrapper" id="session-recorder-btn">
                    <div class="round-btn-outer">
                      <div class="round-btn"><i class="control-btn icon-play"></i></div>
                    </div>
                  </div>
                </div>
              </li>
              <li>
                <a href="#">Session Remaining</a>
              </li>
            </ul>
          </div>
        </div>

        <div class="sidebar-nav" id="funnel-list">
          <input type="hidden" name="favorite" id="app-view-favorite" />

          
          <!-- <ul class="nav"> -->
          <!-- <li class=''> -->

         <div class="affix-list" data-spy="affix" data-offset-top="200">
            <div class="dropdown clearfix nav-dropdown">
              <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">

                <li class="nav-header">Browse</li>
                <li class="active">
                  <%= link_to(app_path(@app), remote: true) do %> All <% end %> 
                </li>
                <li>
                  <%= link_to(app_path(@app), remote: true) do %>
                    New
                    <% count = @app.app_sessions.recorded.processed_after(@last_viewed_at).length %>
                    
                    <span class="badge badge-black pull-right">
                      <%= count %>
                    </span>
                    
                  <% end %>
                </li>

                <li>
                  <%= link_to(app_path(@app, favorited: 1), remote: true) do %>
                    Starred
                    <% count = @app.app_sessions.recorded.favorited.processed_after(@last_viewed_at).length %>
                    
                    <span class="badge badge-black pull-right">
                      <%= count %>
                    </span>
                    
                  <% end %>
                </li>

                <!-- <li class="divider"></li> -->
                <li class="nav-header">Filters</li>
                <% @app.funnels.each do |funnel| %>        
                <li class="dropdown-submenu <% funnel.id == params[:funnel].to_i ? "active" :"" %>">
                  <a tabindex="-1" href="<%= app_path(@app, funnel: funnel) %>" data-remote="true">
                    <%= funnel.name %>
                    <span class="badge badge-black">
                      <% count = @app.app_sessions.by_funnel(funnel).processed_after(@last_viewed_at).length %>
                      <%= count %>
                    </span>

                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Edit", [:edit, @app, funnel], class: '', remote: true %></li>
                    <li><%= link_to "Destroy", [@app, funnel], :method => :delete, class: '', data: {confirm: "Are you sure?"} %></li>
                  </ul>
                </li>

                <%end%>
                <!-- <li class="dropdown-submenu">
                  <a>Another Item</a>
                </li> -->
              </ul>
            </div>
          </div>
          <!-- </li> -->
          <hr>

          <ul class="nav filter-actions-nav">
            <li>
              <%= link_to "+ Create a filter", [:new, @app, :funnel], class: 'btn', remote: true %>
            </li>

           <!--  <li>
              <a href="#" id="funnel-edit-link">Edit a filter</a>
            </li>
            --> 
          </ul>
        </div><!--sidebar-nav-->
      </div>
      <!-- <div id="sticky-anchor"></div> -->
    </div><!--/span-->

    <!-- App session list -->
    <%= render :partial => "app_sessions_list" %>

  </div><!--/row-->

