<h1>Listing apps</h1>

<h2>account apps</h2>
<table>
  <tr>
    <th>App id</th>
    <th>App name</th>
    <th>App token</th>
    <th>Number of App Sessions</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% 
    if not @admin_apps.blank? 
      @admin_apps.each do |app| 
  %>
  <tr>
    <td><%= app.id %></td>
    <td><%= app.name %></td>
    <td><%= app.token %></td>
    <td><%= app.app_sessions.count %></td>
    <td><%= link_to 'Show', app %></td>
    <td><%= link_to 'Edit', edit_app_path(app) %></td>
    <td><%= link_to 'Destroy', app, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
  <% 
      end 
    end 
  %>
</table>

