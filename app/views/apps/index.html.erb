<h1>Listing apps</h1>

<table>
  <tr>
    <th>App id</th>
    <th>App name</th>
    <th>App token</th>
    <th>Number of App Sessions</th>
  </tr>

<% @apps.each do |app| %>
  <tr>
    <td><%= app.id %></td>
    <td><%= app.name %></td>
    <td><%= app.token %></td>
    <td><%= app.app_sessions.count %></td>
  </tr>
<% end %>
</table>

