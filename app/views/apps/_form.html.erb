<%= form_for(@app, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @app.errors.any? %>
		<div class="alert alert-error fade in" data-alert="alert">
		  <a class="close" data-dismiss="alert" href="#">&times;</a>
      <%= pluralize(@app.errors.count, "error") %> prohibited this app from being saved:
    </div>
    <% @app.errors.full_messages.each do |msg| %>
		<div class="alert alert-error fade in" data-alert="alert">
		  <a class="close" data-dismiss="alert" href="#">&times;</a>
      <%= msg %>
    </div>
    <% end %>
  <% end %>

  <fieldset> 
    <div class="control-group">
      <%= f.label :name, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :name, :class => "span6" %> 
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit %>
    </div>
</fieldset>
<% end %>
