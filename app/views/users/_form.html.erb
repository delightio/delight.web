<%= form_for(@user, :as => :user, :url => user_path(@user), :method => :put, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @user.errors.any? %>
		<div class="alert alert-error fade in" data-alert="alert">
		  <a class="close" data-dismiss="alert" href="#">&times;</a>
      <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
    </div>
    <% @user.errors.full_messages.each do |msg| %>
		<div class="alert alert-error fade in" data-alert="alert">
		  <a class="close" data-dismiss="alert" href="#">&times;</a>
      <%= msg %>
    </div>
    <% end %>
  <% end %>

  <fieldset>
    <div class="control-group">
      <%= f.label :nickname, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :nickname, :class => "span6" %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :email, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :email, :class => "span6" %>
      </div>
    </div>
    <%= f.hidden_field :signup_step, :value => 2 %>

    <div class="form-actions">
      <%= f.submit "Save", :class => "btn btn-primary" %>
    </div>
</fieldset>
<% end %>
