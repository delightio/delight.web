<%= simple_form_for [@app, @funnel] do |f| %>
  <fieldset>
    <%= f.input :name, :as => :string %>
    <%= f.collection_check_boxes :event_ids, @app.events, :id, :name %>
  </fieldset>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary', :value => 'Save' %>
    <%= link_to "back", @app, class: 'btn' %>
  </div>
<% end %>